#!/bin/bash
cfdisk /dev/sda
mkfs.fat -F32 /dev/sda1
mkfs.ext4 /dev/sda2
mount /dev/sda2 /mnt
mkdir /mnt/boot
mount /dev/sda1 /mnt/boot
timedatectl set-ntp true
pacstrap -i /mnt base linux linux-firmware sudo nano
genfstab -U -p /mnt >> /mnt/etc/fstab
cp -rf chroot-files/02-basic-postinstall /mount/var/tmp && chmod +x /var/tmp/02-basic-postinstall
arch-chroot /mount ./var/tmp/02-basic-postinstall
